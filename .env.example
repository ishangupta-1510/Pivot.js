# Frontend Configuration
# Set to true to enable backend processing, false for frontend-only
VITE_USE_BACKEND=true

# Backend server URL
VITE_BACKEND_URL=http://localhost:3001

# API version
VITE_API_VERSION=v1

# Backend Configuration (copy to backend/.env)
# NODE_ENV=development
# PORT=3001
# HOST=0.0.0.0

# Database Configuration
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=pivot_grid_dev
# DB_USER=pivot_user
# DB_PASSWORD=pivot_secure_password

# Redis Configuration
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# File Upload
# MAX_FILE_SIZE=5368709120  # 5GB in bytes
# UPLOAD_DIR=./uploads

# Security
# JWT_SECRET=your_jwt_secret_here
# CORS_ORIGIN=http://localhost:3000